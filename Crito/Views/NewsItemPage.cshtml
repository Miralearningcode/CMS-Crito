@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.NewsItemPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Services;
@using Umbraco.Cms.Core.Models.PublishedContent;
@inject IUserService UserService;

@{
	Layout = "LayoutWithBreadcrumb.cshtml";
	var userService = UserService;
	var image = Model.Value<IPublishedContent>("newsImage");
}

    <section class="article">
        <div class="container">
            <h2>@Model.Name</h2>
            <div class="details">
                <div class="date">@Model.CreateDate.ToString("MMM dd, yyyy")</div>
                <img class="yellow-dots" src="~/images/icons/yellow-dot.svg" alt="">
                <div class="category">@Model.Value("newsCategory")</div>
                <img class="yellow-dots" src="~/images/icons/yellow-dot.svg" alt="">
                <div class="author">@Model.CreatorName(UserService)</div>
            </div>
            <div class="columns">
                <div class="left-column">
                    <img class="article-img" src="@image.Url()" alt="">
                    <div>
                        @Model.Value("newsContent")
                    </div>
     
                    <div class="tags">
                        @foreach(var tag in Model.Value<IEnumerable<string>>("newsTags"))
                        {
                            <div class="tag">@tag</div>
                        }
               
                    </div>
                </div>
                <div class="right-column">
                    <input class="form-control mr-sm-2" type="search" placeholder="Type to search..." aria-label="Search">
                    <div class="recent-posts">
                        <div class="title"><span>Rec</span>ent Posts</div>
                        <p>How To Blow Through Capital At An Incredible Rate</p>
                        <div class="date">Jan 14, 2020</div>
                        <p>Design Studios That Everyone Should Know About? </p>
                        <div class="date">Jan 14, 2020</div>
                        <p>How did we get 1M+ visitors in 30 days without anything!</p>
                        <div class="date">Jan 14, 2020</div>
                        <p>Figma On Figma: How We Built Our Website Design System</p>
                        <div class="date">Jan 14, 2020</div>
                    </div>
                    <div class="categories">
                        <div class="title"><span>Cat</span>egories</div>
                        <p>Technology - <span>20 Posts</span></p>
                        <p>Freelancing - <span>07 Posts</span></p>
                        <p>Writing - <span>16 Posts</span></p>
                        <p>Marketing - <span>11 Posts</span></p>
                        <p>Business - <span>35 Posts</span></p>
                        <p>Education - <span>14 Posts</span></p>
                    </div>
                </div>
            </div>
        </div>
    </section>